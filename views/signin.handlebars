<div class="columns">
  <div class="column">
    <div class="title">
      <h1>Sign In</h1>
    </div>
    

    <form class="box signin-form">
      <div class="field form-group">
        <label for="email-signin">email:</label>
        <input class="input form-input" type="text" id="email-signin" />
      </div>
      <div class="box form-group">
        <label for="password-signin">password:</label>
        <input class="input form-input" type="password" id="password-signin" />
      </div>
      <div class="form-group">
        <button class="button is-primary" type="submit" id="signInButton">Sign In</button>
      </div>
    </form>
    <div class="sign-up">
      <h3>Don't have an account?</h3> 
      <a href="/signup" class="button is-primary link">Sign Up</a>
    </div>
  </div>
</div>

<script src="./js/signin.js"></script>

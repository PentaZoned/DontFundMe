<section class="row">
  <div class="col s6">
    <h2>Edit Project</h2>

    <form class="edit-project-form">
      <div class="form-group">
        <input class="project-title" type="text" value="{{project.title}}" />
      </div>
      <div class="form-group">
        <textarea class="project-text">{{project.body}}</textarea>
      </div>
      <div>
      Created by you on {{format_date project.created_at}}
      |
      <a href="/project/{{project.id}}">{{project.comments.length}} {{format_plural "comment" project.comments.length}}</a>
    </div>
    <button class="btn btn-primary" type="submit">Update Project</button>
    <button class="btn btn-primary" id="delete-btn">Delete Project</button>
    </form>
  </div>
</section>  

<script src="/js/edit.js"></script>
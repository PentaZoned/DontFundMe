<div class="row">
  <div class="col-auto">
    <h1>DontFundMe</h1>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a Project</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-title">project title:</label>
        <input class="form-input" type="text" id="project-title" name="project-title" />
      </div>
      <div class="form-group">
        <label for="fund_needed">goal:</label>
        <input class="form-input" type="number" id="fund_needed" name="fund_needed" placeholder="How much do you want to raise ($)" />
      </div>
      <div class="form-group">
        <label for="project-desc">meow:</label>
        <textarea class="form-input" id="project-desc" name="project-desc" placeholder="Create your story"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/createproject.js"></script>